<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tacostagram</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css">
</head>

<body class = "container mt-4">
  <div class="row mt-4">
    <div>
      <%= flash["notice"] %>
    </div>
    

      <div class="col-9">
      </div>

      <div class="col">
          <% if @current_user %>
            Logged in as: <%= @current_user["first_name"] %> |
            <a href="/logout" class="btn btn-light">Logout</a>
          <% else %>
            <a href="/login" class="btn btn-light">Login</a> |
            <a href="/users/new" class="btn btn-light">Sign Up</a>
          <% end %>
      </div>
  </div>


  <div class = "row mt-4">
      <div class="col-9">
      <h1>Tacostagram</h1>
      </div>

      <div class="col">
        <a href="/posts/new/" class="btn btn-primary btn-lg">New Post</a>
      </div>
  </div>

  <%= yield %>
</body>
</html>
